<%- include ("../partials/header") %>

<div class="container-fluid blogIndex">
	<div class="row">

		<% blogs.forEach(function(blog){ %>
			<div class="col-xl-3 col-lg-4 col-sm-6 col-xs-12">
				<div class="card hover">
					<div class="card-img" style="background-image:url(<%= blog.image %>);">
						<div class="overlay">
							<div class="overlay-content">
							<a class="hover" href="blogIndex/<%= blog._id %>">View More</a>
							</div>
						</div>
					</div>
					<div class="card-content">
					<a href="blogIndex/<%= blog._id %>">
						<h5><%= blog.title %></h5>
						<p class="card-subtitle"><%= blog.subtitle %></p>
						<p class="card-abstract"><%= blog.abstract %></p>
						<p class="card-date"><%= blog.date %></p>
					</a>
					</div>
			</div>
		</div>									
		<% }); %>
	</div>	
</div>
	


<%- include ("../partials/footer") %>