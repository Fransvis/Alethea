<%- include ("../partials/header") %>

<div class="container-fluid videoIndex">
	<div class="row">
		
		<% videos.forEach(function(video){ %>
			<div class="col-xl-3 col-lg-4 col-sm-6 col-xs-12">
				<iframe width="300" height="200" 
					src="<%= video.source %>" allowfullscreen>
				</iframe>
				<% if(currentUser){ %>
				<form action="/videoIndex/<%= video._id %>?_method=DELETE" method="POST">
					<button class="btn btn-danger">Delete</button>
				</form>
				<% }; %>
			</div>
		<% }); %>
		
	</div>
		<a href="/videoIndex/new">New</a>
</div>

<%- include ("../partials/footer") %>