<%- include ("../partials/header") %>

<div class="container-fluid resources">
	<div class="row">
	
	<% resources.forEach(function(resource){ %>
		<div class="col-xl-3 col-lg-4 col-sm-6 col-xs-6">
			<a href="<%= resource.link %>">
				<div class="flip-card-container">
   					<div class="flip-card">
      					<div class="flip-card-front">
        					<img src="<%= resource.image %>" alt="Albert Einstein">
		  						<div class="card-img-overlay">
			  						<%= resource.title %>
		  						</div>
      					</div>
      						<div class="flip-card-back">
        						<p><%= resource.subtitle %><span>- <%= resource.author %> -</span></p>
								<% if (currentUser){ %>
								<form action="/resourceIndex/<%= resource._id %>?_method=DELETE" method="POST">
									<button class="btn btn-danger">Delete</button>
								</form>
								<% } %>
     	 					</div>
    				</div>
				</div>
			</a>
		</div>
	<% }); %>
		<a class="newresource" href="/resourceIndex/new">New resource</a>
	</div>
</div>


<%- include ("../partials/footer") %>